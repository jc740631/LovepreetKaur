BoxLayout:
    orientation: 'horizontal'
    BoxLayout:
        orientation : 'vertical'
        size_hint_x : .40
        Label:
            text:'Sort by:'
        Spinner:
            id : 'sortType'
            text:"Visited"
            values:"Visited", "Priority", "Name", "Country"
            background_color:(0.784, 0.443, 0.216, 1)
            on_text: app.sortby(self.text)

        Label:
            text:'Add new place...'
        Label:
            text : 'Name'
            name : 'nameLabel'
        TextInput:
            id : nameInput

        Label:
            text : 'Country'
        TextInput:
            id : country
        Label:
            text : 'Priority'
        TextInput:
            id : priorityInput
            input_type: 'number'
        Button:
            text : 'Add Place'
            on_press : app.add_newplace()
        Button:
            text : 'Clear'
            on_press : app.clear_all()
    AnchorLayout:
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'top'
            Label:
                id : unvisited_label
                size_hint: None, None
                size: 100,100
                text: 'Places to visit: '
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'bottom'
            Label:
                size_hint: None, None
                size: 100,100
                text: 'asdaf'
                id : statusLabel
        AnchorLayout:
            anchor_x:'center'
            anchor_y:'center'
            ScrollView:
                size_hint: 1,.8
                GridLayout:
                    id: grid
                    cols : 1
                    size_hint_y: None
                    size: 500,500






